
@{
    ViewBag.Title = "CarTypesIndex";
}
@model List<MyMvc.Models.ParkInfoViewModel>



@*应用Layu.Css*@

<link href="/AdmianInter/layui/css/layui.css" rel="stylesheet" />
<script src="~/AdmianInter/layui/layui.js"></script>
<script src="~/AdmianInter/page/links/CarTypesIndex.js?s"></script>


@using (Html.BeginForm())
{
    <blockquote class="layui-elem-quote news_search">
        <div class="layui-inline">
            <div class="layui-input-inline">
                <input type="text" value="" name="name" placeholder="请输入级别 :" class="layui-input search_input">
            </div>
            <input type="submit" name="name" class="layui-btn " value="查询" />
        </div>
        <div class="layui-inline">
            <input type="button" name="name" class="layui-btn layui-btn-normal newsAdd_btn" onclick="location.href='/UserMvc/CarTypesAdd'" value="添加级别" />
        </div>
        <div class="layui-inline">
            <a class="layui-btn layui-btn-danger batchDel">批量删除</a>
        </div>

    </blockquote>
}
<div class="layui-form links_list">
    <table class="layui-table">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" name="" lay-skin="primary" lay-filter="allChoose" id="allChoose">
                    <div class="layui-unselect layui-form-checkbox" lay-skin="primary">
                        <i class="layui-icon"></i>
                    </div>
                </th>
                <th>编号    </th>
                <th>级别    </th>
                <th>费用    </th>
                <th>数据操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="checked" class="checked1" value="@m.TID" data-id="@m.TID" lay-skin="primary" lay-filter="choose">
                        <div class="layui-unselect layui-form-checkbox" lay-skin="primary">
                            <i class="layui-icon"></i>
                        </div>
                    </td>
                    <td>@m.TID</td>
                    <td>@m.Tname</td>
                    <td>@m.Tmaney</td>
                    <td>
                        <a>
                            @Html.ActionLink("编辑", "CarTypesUpdate", new { @id = m.TID }, new { @class = "layui-btn layui-btn-mini links_edit" })
                        </a><a class="layui-btn layui-btn-danger layui-btn-mini links_del" data-id="@m.TID">
                            <i class="layui-icon"></i> 删除
                        </a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>